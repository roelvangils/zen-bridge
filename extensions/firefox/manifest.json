{
  "manifest_version": 2,
  "name": "Zen Browser Bridge",
  "version": "4.0.0",
  "description": "Execute JavaScript in your browser from the command line. Works on all websites, bypasses CSP restrictions.",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["permissions.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Zen Browser Bridge",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "zen-bridge@roelvangils.github.io",
      "strict_min_version": "109.0"
    }
  }
}
